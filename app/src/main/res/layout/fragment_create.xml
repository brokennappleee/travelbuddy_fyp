<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:background="@android:color/white">

    <!-- Centered content group -->
    <LinearLayout
        android:id="@+id/content_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start_planning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_create_title"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Plan a new trip"
            style="@style/TitleText"
            android:textSize="26sp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_create_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a journey and visualize your upcoming adventure"
            android:gravity="center"
            style="@style/Subtext"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <!-- Where to? container (one big textbox) -->
        <FrameLayout
            android:id="@+id/container_destination"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_input"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_search4"
                    android:tint="@color/lightgrey" />

                <EditText
                    android:id="@+id/et_destination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Where to?"
                    android:textColor="@color/black"
                    android:textColorHint="@color/lightgrey"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:clickable="true"
                    androidCursorVisible="false"
                    android:inputType="none"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Dates container (single big textbox with two fields) -->
        <FrameLayout
            android:id="@+id/container_dates"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/custom_input"
            android:layout_marginTop="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Start date -->
                <LinearLayout
                    android:id="@+id/row_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_calendar"
                        android:tint="@color/lightgrey" />

                    <TextView
                        android:id="@+id/tv_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Start date"
                        android:textColor="@color/lightgrey"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- End date -->
                <LinearLayout
                    android:id="@+id/row_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_calendar"
                        android:tint="@color/lightgrey" />

                    <TextView
                        android:id="@+id/tv_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="End date"
                        android:textColor="@color/lightgrey"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <!-- Invite a tripmate -->
        <LinearLayout
            android:id="@+id/row_invite_tripmate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="22dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add" />

            <TextView
                android:id="@+id/tv_invite_tripmate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite a tripmate"
                android:textSize="16sp"
                android:textColor="@color/lightgrey"
                android:layout_marginStart="4dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- TODO: Move button closer to the content -->
    <!-- Start planning button pinned to bottom -->
    <Button
        android:id="@+id/btn_start_planning"
        style="@style/PrimaryButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/skyblue"
        android:text="Create Trip"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cornerRadius="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_group"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
