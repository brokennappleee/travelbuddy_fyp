<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inbox_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">


    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Inbox"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="12dp" />
    <!-- Tabs container -->
    <LinearLayout
        android:id="@+id/tab_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Alerts tab -->
        <LinearLayout
            android:id="@+id/tab_alerts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_tab_alerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel Alerts"
                android:textSize="14sp"
                android:textColor="@color/skyblue"
                android:fontFamily="@font/montserrat_bold" />

            <!-- underline sized to text -->
            <View
                android:id="@+id/underline_alerts"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/skyblue" />

        </LinearLayout>

        <!-- Trip Buddies tab -->
        <LinearLayout
            android:id="@+id/tab_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_tab_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip Buddies"
                android:textSize="14sp"
                android:textColor="@color/darkblack"
                android:fontFamily="@font/montserrat_bold"/>

            <View
                android:id="@+id/underline_tips"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Others tab -->
        <LinearLayout
            android:id="@+id/tab_offers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_tab_offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14sp"
                android:textColor="@color/darkblack" />

            <View
                android:id="@+id/underline_offers"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </LinearLayout>

    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_inbox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1" />

</LinearLayout>
