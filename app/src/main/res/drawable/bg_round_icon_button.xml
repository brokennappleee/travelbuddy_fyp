<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Fill color inside the circle -->
    <solid android:color="@color/white" />

    <!-- Border of the circle -->
    <stroke
        android:width="0dp"
        android:color="@color/lightgrey" />

    <!-- Optional: some inner padding so icon doesn't touch border -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
