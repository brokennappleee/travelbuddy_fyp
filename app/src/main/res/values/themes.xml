<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TravelBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!--Common Elements-->
    <!--Back Button-->
    <style name="BackButton">
        <item name="android:src">@drawable/back_btn</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!--Navigation Bar Text-->
    <style name="BottomNavText" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">4dp</item>  <!-- increase gap -->
    </style>

    <!--Input Field Box-->
    <style name="InputField">
        <item name="android:background">@drawable/custom_input</item>
        <!-- inner spacing so text doesnâ€™t stick to the border -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!--Input Field Label -->
    <style name="InputLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lightgrey</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="lineHeight">30sp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <!--Illustration-->
    <style name="LargeIllustration">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <!-- Launch Page -->
    <style name="TitleText">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Subtext">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darkblack</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="lineHeight">30sp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="backgroundTint">@color/skyblue</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>

    </style>


    <!-- Personal Questions 0-5-->
    <style name="PaceSlider" parent="@style/Widget.Material3.Slider">
        <item name="trackHeight">10dp</item>
        <item name="thumbRadius">6dp</item>
        <item name="tickVisible">true</item>
        <item name="tickColorInactive">@color/lightgrey</item>
        <item name="tickColorActive">@color/lightgrey</item>
    </style>

    <style name="Theme.TravelBuddy" parent="Base.Theme.TravelBuddy" />
</resources>